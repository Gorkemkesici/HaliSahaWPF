        <TextBox x:Name="txt_password" HorizontalAlignment="Left" Height="25" Margin="86,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="E-Mail Adresiniz
               " HorizontalAlignment="Left" Margin="86,151,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Şifreniz" HorizontalAlignment="Left" Margin="86,212,0,0" VerticalAlignment="Top" Width="200"/>
    </Grid>
</Page>
